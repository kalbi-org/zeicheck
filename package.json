{
  "name": "@kalbi/zeicheck",
  "version": "0.3.0",
  "description": "e-Tax (xtx) 確定申告データの整合性チェッカー",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "zeicheck": "./dist/cli.js"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "data"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ci": "vitest run --coverage",
    "lint": "eslint src/",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "e-tax",
    "xtx",
    "確定申告",
    "青色申告",
    "税務",
    "バリデーション"
  ],
  "author": "kalbi-org",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/kalbi-org/zeicheck.git"
  },
  "homepage": "https://github.com/kalbi-org/zeicheck#readme",
  "bugs": {
    "url": "https://github.com/kalbi-org/zeicheck/issues"
  },
  "engines": {
    "node": ">=20"
  },
  "dependencies": {
    "commander": "^13.1.0",
    "fast-xml-parser": "^5.2.0",
    "picocolors": "^1.1.1",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@types/node": "^22.13.4",
    "eslint": "^9.20.0",
    "tsup": "^8.4.0",
    "typescript": "^5.7.3",
    "vitest": "^3.0.6",
    "@vitest/coverage-v8": "^3.0.6"
  }
}
